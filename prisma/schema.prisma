datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id       Int       @id @default(autoincrement())
  slug     String    @unique
  name     String
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String?  @unique
  name        String
  price       Int
  brand       String?
  image       String?
  sku         String?  @unique
  description String?
  createdAt   DateTime @default(now())

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}
