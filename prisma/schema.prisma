datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String?  @unique   // <— läggs till nu (tillfälligt valfri)
  name        String
  price       Int
  brand       String?
  image       String?
  sku         String?  @unique
  description String?
  createdAt   DateTime @default(now())
}
